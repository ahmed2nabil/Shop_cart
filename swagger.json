{
    "openapi": "3.0.3",
    "info": {
      "version": "1.0.0",
      "title": "Shop Cart API",
      "description": "E-commerce backend api to order items",
      "license": {
        "name": "Ahmed Nabil",
        "email" : "ahmednabl992@gmail.com",
        "url": ""
      }
    },
    "host": "http://localhost:3000/api/v1",
    "servers" :[
        {
            "url" : "http://localhost:3000/api/v1",
            "description" : "local server for development",
            "variables" : {}
        }
    ],
    "basePath": "/",
    "tags": [
        {
            "name" : "User",
            "description" : "Everything about users"
        },
        {
            "name" : "Admin",
            "description" : "Everything about admins"
        },
        {
            "name": "Products",
            "description": "Everything about products"
        },
        {
            "name": "Orders",
            "description": "Everything about orders"
        },
        {
        "name": "Carts",
        "description": "Everything about Carts"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
        "/login" : {
            "post" : {
                "tags" :["User"],
                "description" : "to login to the system",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type": "object",
                                "example":{
                                    "email" : "test@gmail.com",
                                    "password" : "test1234"
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "200" :{
                        "description": "User login Successfully"
                    },
                    "401" : {
                        "description" : "Invalid Credentails"
                    },
                    "500" : {
                        "description" : "Server Error"
                    }
                }
            }
        },
        "/signup" : {
            "post" : {
                "tags" :["User"],
                "description" : "create accoount in the system",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type": "object",
                                "example": {
                                  "email": "ahmed@gmail.com",
                                  "password": "Ahmed123",
                                  "username":"ahmed"
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "200" :{
                        "description": "User SignUp Successfully"
                    },
                    "401" : {
                        "description" : "Invalid Credentails"
                    },
                    "403" : {
                        "description" : "Email already Exists"
                    },
                    "500" : {
                        "description" : "Server Error"
                    }
                }
            }
        },
        "/products": {
            "get": {
                "tags" : ["Products" , "Admin"],
                "description": "Returns all Products from the system that the user has access to",
                "produces": [
                "application/json"
                ],
                "responses": {
                "200": {
                    "description": "A list of prodcuts.",
                    "schema": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/products"
                    }
                    }
                }
                }
            }
        },
        "/admin/add-product" : {
            "post" : {
                "tags" :["Admin"],
                "description": "Add  Product",
                "parameters": [],
                "produces": [],
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type": "object",
                                "example": {
                                    "title" : "Shoe 101" ,
                                    "description" : "this is a Shoe 101" , 
                                    "imageUrl"  : "anything for test",
                                    "price" : 9.9
                                }
                            }
                        }
                    }
                },
                "responses": {
                "200": {
                    "description": "A detials of prodcut.",
                    "schema": {
                    "type": "object",
                    "items": {
                        "$ref": "#/definitions/products"
                    }
                    }
                }
                }                
            }
        },
        "/products/{productId}": {
            "get": {
                "tags" :["Products" ,"Admin"],
                "description": "Returns One Product Details",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path", 
                        "schema": {
                          "type" : "string"
                        },
                        "style" : "form",
                        "required": true, 
                        "description": "Id of product to get detials"
                    }
                ],
                "produces": [
                "application/json"
                ],
                "responses": {
                "200": {
                    "description": "A detials of prodcut.",
                    "schema": {
                    "type": "object",
                    "items": {
                        "$ref": "#/definitions/products/productId"
                    }
                    }
                }
                }
            }
        },
        "/admin/edit-product" : {
            "put" : {
                "tags" :["Admin"],
                "description": "Add  Product",
                "parameters": [],
                "produces": [],
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type": "object",
                                "example": {
                                    "productId" : 2,
                                    "title" : "Shoe 102" ,
                                    "description" : "this is a Shoe 102" , 
                                    "imageUrl"  : "anything for test",
                                    "price" : 9.9
                                }
                            }
                        }
                    }
                },
                "responses": {
                "200": {
                    "description": "A edit of prodcut successfully.",
                    "schema": {
                    "type": "object",
                    "items": {
                        "$ref": "#/definitions/products"
                    }
                    }
                }
                }                
            }
            },
            "/admin//delete-product" : {
                "delete" : {
                    "tags" :["Admin"],
                    "description": "Delete Product ",
                    "parameters": [
                        {
                            "name": "productId",
                            "in": "path", 
                            "schema": {
                              "type" : "string"
                            },
                            "style" : "form",
                            "required": true, 
                            "description": "Id of product to delete"
                        }
                    ],
                    "produces": [
                    "application/json"
                    ],
                    "responses": {
                    "200": {
                        "description": "deleted Successfully.",
                        "schema": {  }
                    }
                    }
                }
            }
    },
    "definitions":{
        "product" : {
            "required" : [
                "title",
                "description",
                "imageUrl",
                "price"
            ],
            "properties": {
                "productId": {
                    "type" : "integer"
                },
                "title" : {
                    "type" : "string"
                },
                "description" : {
                    "type" : "string"
                },
                "imageUrl" : {
                    "type" : "string"
                },
                "price" : {
                    "type" : "integer"
                }
            }
        },
        "products" : {
            "$ref": "#/definitions/product"
        }
    } ,
    "components" : {
        "securitySchemes" : {
            "BearerAuth" : {
                "type" :"http",
                "scheme" :"bearer",
                "in": "header",
                "bearerFormat": "JWT"
            }
        }
    }  ,
    "security" : [{
        "BearerAuth" : []
    }]
}